{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "baseUrl": "app",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true
  },

  "include": [
    "app/**/*.ts",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "dist", "build", "node_modules"
  ]
}
